<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Error - Heavy Equipment Rental</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/homePage.css" />
  </head>
  <body class="bg-gray-100 font-sans">
    <!-- Include the header -->
    <%- include('partials/header') %>

    <section class="container mx-auto px-6 py-10 text-center">
      <h1 class="text-4xl font-bold text-red-600 mb-10">
        Error: <%= message %>
      </h1>
      <p class="text-lg text-gray-700 mb-8">
        The category "<%= categoryName.replace('-', ' ').toUpperCase() %>" was
        not found.
      </p>
      <a href="/" class="text-blue-500 hover:underline text-lg"
        >Return to Home Page</a
      >
    </section>

    <!-- Footer Section -->
    <footer class="bg-gray-800 text-white py-6 text-center">
      <p>&copy; 2024 Heavy Equipment Rental. All rights reserved.</p>
    </footer>
  </body>
</html>
