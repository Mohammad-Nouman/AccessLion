<!-- views/homePage.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Heavy Equipment Rental</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/css/homePage.css" />
    <link rel="icon" href="/images/logo2.png" type="image/png" />
  </head>
  <body class="bg-gray-100 font-sans">
    <!-- Include the header -->
    <%- include('partials/header') %>

    <!-- Categories Section -->
    <section class="py-20 container mx-auto px-6">
      <% categories.forEach(category => { %>
      <h2 class="text-3xl font-bold mb-8"><%= category.name %></h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-8">
        <!-- Iterate over subcategories -->
        <% category.subcategories.forEach(sub => { %>
        <div
          class="relative overflow-hidden transition-all duration-300 ease-in-out rounded-lg shadow-lg"
        >
          <a
            href="/category/<%= sub.name.toLowerCase().replace(/\s+/g, '-') %>"
          >
            <img
              src="<%= path %><%= sub.path %>"
              alt="<%= sub.name %>"
              class="w-full transition-opacity duration-300 ease-in-out hover:opacity-50"
            />
            <div
              class="absolute inset-0 flex items-center justify-center bg-black bg-opacity-50 text-white font-bold text-lg transition-opacity duration-300 ease-in-out opacity-0 hover:opacity-100"
            >
              <%= sub.name %>
            </div>
          </a>
        </div>
        <% }); %>
      </div>
      <% }); %>
    </section>

    <!-- Footer Section -->
    <footer class="bg-gray-800 text-white py-6 text-center">
      <p>&copy; 2024 Heavy Equipment Rental. All rights reserved.</p>
    </footer>
  </body>
</html>
